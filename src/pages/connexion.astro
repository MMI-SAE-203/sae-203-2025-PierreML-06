---
import Layout from "../layouts/Layout.astro";
import { pb } from "../../backend/backend.mjs";
import { useState } from "preact/hooks";

const [error, setError] = useState("");

async function handleLogin(event) {
    event.preventDefault();
    const formData = new FormData(event.target);
    const email = formData.get("email");
    const password = formData.get("password");

    try {
        await pb.collection("users").authWithPassword(email, password);
        window.location.href = "/"; // Redirige après connexion
    } catch (err) {
        setError("Identifiants incorrects. Veuillez réessayer.");
    }
}
---

<Layout title="Connexion">
    <section class="flex justify-center items-center h-screen bg-gray-100">
        <div class="bg-white p-8 rounded-lg shadow-md w-96">
            <h2 class="text-2xl font-bold text-center mb-6">Connexion</h2>
            {error && <p class="text-red-500 text-center mb-4">{error}</p>}
            <form onSubmit={handleLogin} class="space-y-4">
                <div>
                    <label for="email" class="block font-medium">Email :</label>
                    <input
                        type="email"
                        name="email"
                        required
                        class="w-full p-2 border rounded"
                    />
                </div>
                <div>
                    <label for="password" class="block font-medium"
                        >Mot de passe :</label
                    >
                    <input
                        type="password"
                        name="password"
                        required
                        class="w-full p-2 border rounded"
                    />
                </div>
                <button
                    type="submit"
                    class="w-full bg-indigo-600 text-white py-2 rounded hover:bg-indigo-700"
                >
                    Se connecter
                </button>
            </form>
            <p class="text-center text-gray-600 mt-4">
                Pas encore inscrit ? <a
                    href="/inscription"
                    class="text-indigo-600">Créer un compte</a
                >
            </p>
        </div>
    </section>
</Layout>
