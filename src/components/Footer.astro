---
import LogoFooter from "../assets/icons/logo.svg";
import IconFacebook from "../assets/icons/facebook.svg";
import IconInstagram from "../assets/icons/instagram.svg";
import IconTwitter from "../assets/icons/X.svg";
import IconYoutube from "../assets/icons/youtube.svg";
---

<footer class="bg-black text-white py-12 px-6">
    <div
        class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8 text-center md:text-left"
    >
        <!-- Logo et description -->
        <div>
            <a href="/" aria-label="Accueil">
                <LogoFooter class="h-12 mx-auto md:mx-0" />
            </a>
            <p class="mt-4 text-gray-400">
                Ciné Échos - Le festival du cinéma nocturne à Belfort.
            </p>
        </div>

        <!-- Navigation -->
        <nav>
            <h3 class="text-lg font-bold uppercase mb-4">Navigation</h3>
            <ul class="space-y-2">
                <li>
                    <a href="/festival" class="hover:text-gray-400">À propos</a>
                </li>
                <li><a href="/films" class="hover:text-gray-400">Films</a></li>
                <li>
                    <a href="/activites" class="hover:text-gray-400"
                        >Activités</a>
                </li>
                <li>
                    <a href="/invites" class="hover:text-gray-400">Invités</a>
                </li>
                <li>
                    <a href="/infos-pratiques" class="hover:text-gray-400"
                        >Infos Pratiques</a>
                </li>
                <li>
                    <a href="/contact" class="hover:text-gray-400">Contact</a>
                </li>
            </ul>
        </nav>

        <!-- Réseaux sociaux -->
        <div>
            <h3 class="text-lg font-bold uppercase mb-4">Suivez-nous</h3>
            <div class="flex justify-center md:justify-start gap-4">
                <a href="https://facebook.com" aria-label="Facebook">
                    <IconFacebook
                        class="h-8 w-8 fill-white hover:fill-gray-400"
                    />
                </a>
                <a href="https://instagram.com" aria-label="Instagram">
                    <IconInstagram
                        class="h-8 w-8 fill-white hover:fill-gray-400"
                    />
                </a>
                <a href="https://twitter.com" aria-label="Twitter">
                    <IconTwitter
                        class="h-8 w-8 fill-white hover:fill-gray-400"
                    />
                </a>
                <a href="https://youtube.com" aria-label="YouTube">
                    <IconYoutube
                        class="h-8 w-8 fill-white hover:fill-gray-400"
                    />
                </a>
            </div>
        </div>
    </div>

    <!-- Copyright -->
    <div class="mt-8 text-center text-gray-500 text-sm">
        © {new Date().getFullYear()} Ciné Échos. Tous droits réservés.
    </div>
</footer>
