---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import CreditMutuelLogo from "../assets/icons/credit_mutuel_logo.webp";
import KinepolisLogo from "../assets/icons/kinepolise_logo.webp";
import BelfortLogo from "../assets/icons/belfort_logo.webp";
import { Picture } from "astro:assets";
import Carousel from "../components/carousel.astro";

---

<Layout>
    <!-- Bandeau d'accueil -->
    <section
        class="relative w-full h-screen flex items-center justify-center bg-black text-white text-center"
    >
        <div
            class="absolute inset-0 bg-[url('../assets/images/placeholder.webp')] bg-cover bg-center opacity-40"
        >
        </div>
        <div class="relative z-10 space-y-6">
            <h1 class="text-5xl font-bold">Bienvenue à Ciné Échos</h1>
            <p class="text-lg">
                Plongez dans l’univers du cinéma nocturne du <strong
                    >10 au 13 mars</strong
                > à Belfort
            </p>
            <Button
                text="Réserver ma place"
                url="#"
                variant="dark"
                size="large"
            />
        </div>
    </section>

    <!-- Aperçu des sections principales -->
    <section class="py-16 bg-gray-900 text-white text-center">
        <h2 class="text-4xl font-bold mb-10">Découvrez le Festival</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
            <div class="p-6 bg-gray-800 rounded-lg">
                <h3 class="text-xl font-semibold">Programme des films</h3>
                <p>Une sélection de films immersifs sur le thème de la nuit.</p>
                <Button text="Voir les films" url="/films" variant="outlined" />
            </div>
            <div class="p-6 bg-gray-800 rounded-lg">
                <h3 class="text-xl font-semibold">Nos invités</h3>
                <p>
                    Rencontrez les réalisateurs et experts du cinéma nocturne.
                </p>
                <Button
                    text="Découvrir les invités"
                    url="/invites"
                    variant="outlined"
                />
            </div>
            <div class="p-6 bg-gray-800 rounded-lg">
                <h3 class="text-xl font-semibold">Infos pratiques</h3>
                <p>Tout ce qu’il faut savoir pour préparer votre venue.</p>
                <Button
                    text="En savoir plus"
                    url="/infos-pratiques"
                    variant="outlined"
                />
            </div>
        </div>
    </section>

    <!-- Carrousel -->
    <section class="py-16 bg-gray-800 text-white text-center">
        <h2 class="text-4xl font-bold mb-10">
            Plongez dans l'univers du cinéma
        </h2>
        <Carousel /> 
    </section>

    <!-- Partenaires -->
    <section class="py-16 text-center bg-white">
        <h2 class="text-4xl font-bold mb-10">Nos partenaires</h2>
        <div class="flex flex-wrap justify-center gap-10">
            <Picture
                src={CreditMutuelLogo}
                class="h-16 object-contain"
                alt="Crédit Mutuel"
            />
            <Picture
                src={KinepolisLogo}
                class="h-16 object-contain"
                alt="Kinépolis"
            />
            <Picture
                src={BelfortLogo}
                class="h-16 object-contain"
                alt="Ville de Belfort"
            />
        </div>
    </section>
</Layout>
