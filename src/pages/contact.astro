---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import IconFacebook from "../assets/icons/facebook.svg";
import IconInstagram from "../assets/icons/instagram.svg";
import IconTwitter from "../assets/icons/X.svg";
import IconYoutube from "../assets/icons/youtube.svg";
---

<Layout title="Contact">
    <section class="pt-32 pb-16 bg-black text-white text-center">
        <h1 class="text-5xl font-bold mb-6">Nous contacter</h1>
        <p class="text-lg max-w-4xl mx-auto">
            Une question sur le festival Ciné Échos ? Contactez-nous via le
            formulaire ci-dessous ou retrouvez nos informations de contact.
        </p>
    </section>

    <!-- Formulaire de contact -->
    <section class="py-16 bg-gray-900 text-white text-center">
        <div class="max-w-4xl mx-auto">
            <h2 class="text-4xl font-bold mb-6">Formulaire de contact</h2>
            <form class="space-y-6 bg-gray-800 p-8 rounded-lg text-left">
                <div>
                    <label class="block text-lg font-semibold mb-2">Nom</label>
                    <input
                        type="text"
                        class="w-full p-3 bg-gray-700 rounded-lg text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                        placeholder="Votre nom"
                        required
                    />
                </div>
                <div>
                    <label class="block text-lg font-semibold mb-2">Email</label
                    >
                    <input
                        type="email"
                        class="w-full p-3 bg-gray-700 rounded-lg text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                        placeholder="Votre email"
                        required
                    />
                </div>
                <div>
                    <label class="block text-lg font-semibold mb-2">Sujet</label
                    >
                    <input
                        type="text"
                        class="w-full p-3 bg-gray-700 rounded-lg text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                        placeholder="Sujet de votre message"
                        required
                    />
                </div>
                <div>
                    <label class="block text-lg font-semibold mb-2"
                        >Message</label
                    >
                    <textarea
                        rows="5"
                        class="w-full p-3 bg-gray-700 rounded-lg text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                        placeholder="Votre message"
                        required></textarea>
                </div>
                <Button text="Envoyer" url="#" variant="dark" size="large" />
            </form>
        </div>
    </section>

    <!-- Coordonnées -->
    <section class="py-16 bg-gray-800 text-white text-center">
        <div class="max-w-4xl mx-auto">
            <h2 class="text-4xl font-bold mb-6">Coordonnées</h2>
            <div class="space-y-4">
                <p class="text-lg">
                    <strong>Email :</strong> contact@cine-echos.com
                </p>
                <p class="text-lg">
                    <strong>Téléphone :</strong> +33 1 23 45 67 89
                </p>
                <p class="text-lg">
                    <strong>Adresse :</strong> 12 Rue du Festival, 90000 Belfort,
                    France
                </p>
            </div>
        </div>
    </section>

    <!-- Réseaux sociaux -->
    <section class="py-16 bg-gray-900 text-white text-center">
        <div class="max-w-4xl mx-auto">
            <h2 class="text-4xl font-bold mb-6">Suivez-nous</h2>
            <div class="flex justify-center gap-6">
                <a href="https://facebook.com" aria-label="Facebook">
                    <IconFacebook
                        class="h-10 w-10 fill-white hover:fill-gray-400 transition"
                    />
                </a>
                <a href="https://instagram.com" aria-label="Instagram">
                    <IconInstagram
                        class="h-10 w-10 fill-white hover:fill-gray-400 transition"
                    />
                </a>
                <a href="https://twitter.com" aria-label="Twitter">
                    <IconTwitter
                        class="h-10 w-10 fill-white hover:fill-gray-400 transition"
                    />
                </a>
                <a href="https://youtube.com" aria-label="YouTube">
                    <IconYoutube
                        class="h-10 w-10 fill-white hover:fill-gray-400 transition"
                    />
                </a>
            </div>
        </div>
    </section>
</Layout>
